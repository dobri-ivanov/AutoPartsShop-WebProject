@using AutoPartsShop.Web.ViewModels.Part;
@model PartDeleteViewModel

@{
    ViewData["Title"] = "Delete Part";
}

<h2>Delete Part</h2>

<div>
    <h4>Part Details</h4>
    <img class="card-body col-sm-4" src="@Model.ImageUrl" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Vehicle:</dt>
        <dd class="col-sm-10">@Model.Vehicle</dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a onclick="history.back()" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
