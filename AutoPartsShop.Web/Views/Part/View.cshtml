@using AutoPartsShop.Web.ViewModels.Part;
@model PartInfoViewModel

@{
    ViewData["Title"] = "Delete Part";
}

<h2>Part Details</h2>

<div style="text-align: ;">
    <h4></h4>
    <img class="card-body col-sm-3" src="@Model.ImageUrl" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Vehicle:</dt>
        <dd class="col-sm-10">@Model.Vehicle</dd>

        <dt class="col-sm-2">Seller:</dt>
        <dd class="col-sm-10">@Model.Company</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <div class="form-group">
        <a onclick="history.back()" class="btn btn-secondary">Cancel</a>
    </div>
</div>
