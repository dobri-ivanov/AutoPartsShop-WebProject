@model PartFormModel

@{
    ViewData["Title"] = "Part for sale";
}
<h2 class="text-center">Add part for sale</h2>

<style>
    body {
        background-image: url("https://static.vecteezy.com/system/resources/previews/007/100/608/non_2x/abstract-geometric-white-and-gray-on-light-silver-gradient-background-modern-banner-design-illustration-free-vector.jpg");
    }
</style>
<form asp-action="Add" asp-controller="Part" method="post">

    <input asp-for="CompanyId" type="hidden"/>

    <label asp-for="VehicleId" class="form-label">Vehicle</label>
    <select asp-for="VehicleId" class="form-control">
        @foreach (var board in Model.Vehicles)
        {
            <option value="@board.Id">@board.Name</option>
        }
    </select>
    <span asp-validation-for="VehicleId" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">ImageUrl:</label>
        <input asp-for="ImageUrl" class="form-control" rows="3" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Description">Additional information (Description):</label>
        <textarea asp-for="Description" placeholder="Serial Number - SND31233" class="form-control" ></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" style="margin-top: 1.5%;" class="btn btn-primary">Confirm</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}