@model SellerAppyFormModel
@{
    ViewData["Title"] = "Become seller";
}
<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <h1>
            It is a great pleasure for us that you want to become a seller!
        </h1>
        <h3>Register your company!</h3>
        <form method="post" action="Apply" class="col-4">
            <div class="form-group">
                <label for="name">Company name:</label>
                <input type="text" id="name" name="Name" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="lastName">Company Address</label>
                <input type="text" id="lastName" name="LastName" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="businessPhoneNumber">Business Phone Number:</label>
                <input placeholder="+359887056342" type="tel" id="businessPhoneNumber" name="BusinessPhoneNumber" class="form-control" required />
            </div>

            <button type="submit" style ="margin-top: 1%;"class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>
